<div id="<%= dom_id topic %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= topic.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= topic.content %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Author name:</strong>
    <%= topic.author_name %>
  </p>

</div>
