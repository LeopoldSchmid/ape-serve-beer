<div id="<%= dom_id reply %>">
  <div class="bg-gray-50 rounded-lg p-4 mb-4">
    <div class="flex justify-between items-start mb-2">
      <div>
        <p class="text-sm text-gray-500">
          <%= reply.author_name %> replied <%= time_ago_in_words(reply.created_at) %> ago
        </p>
      </div>
      <div class="flex space-x-2">
        <%= link_to 'Edit', edit_topic_reply_path(reply.topic, reply), class: 'text-blue-600 hover:text-blue-800' %>
        <%= link_to 'Delete', topic_reply_path(reply.topic, reply), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'text-red-600 hover:text-red-800' %>
      </div>
    </div>

    <div class="prose max-w-none">
      <%= reply.content %>
    </div>
  </div>
</div>
